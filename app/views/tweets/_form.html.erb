<%= form_with model: @tweet, local: true do |f|%>
  <%= render "devise/shared/error_messages", resource: @tweet %>
  <div class="field">
    <%= f.label :text, "つぶやきたい事" %><br />
    <%= f.text_area :text, class: :form__text, placeholder: "投稿内容", rows: "5", onKeyUp: "countLength(value, 'textlength');" %>
    <p id="textlength">0文字/500</p>
    <script>
      function countLength( text, field ) {
        document.getElementById(field).innerHTML = text.length + "文字/500";
      }
    </script>
  </div>

  <div class="actions">
    <%= f.submit "投稿", class: :form__btn  %>
  </div>
<% end %>