<div class="contents">
  <% @tweets.each do |tweet| %>
  <div class = "box">
    <span class="name">
      <%= tweet.user.nickname %>
    </span>
    <p><%= tweet.text %></p>
    <p class = "more_list">
      <%= link_to '編集', edit_tweet_path(tweet.id), method: :get %>
      <%= link_to '削除', "#", method: :delete %>
    </p>
  </div>
  <% end %>
</div>