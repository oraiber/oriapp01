<!DOCTYPE html>
<html>
  <head>
    <title>つぶやきの場</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "header">
      <div class = "header_bar">
        <div class = "nav">
          <div class="nav_left"><%= link_to image_tag("logo.png", class: :logo), root_path %></div>
          <% if user_signed_in? %>
            <div class="nav_right">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "投稿する", "", class: :nav__btn %>
            </div>
          <% else %>
            <div class="nav_right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
